<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_comment_author_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_comment_author_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/avatar"/>

        <TextView
            android:id="@+id/tv_comment_author_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_toRightOf="@id/iv_comment_author_head"
            android:gravity="center_vertical"
            android:text="猪猪侠" />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/tv_comment_author_name"
            android:layout_toRightOf="@id/iv_comment_author_head"
            android:gravity="center_vertical"
            android:text="POSTTIME"
            android:textSize="12dp" />
    </RelativeLayout>

</RelativeLayout>