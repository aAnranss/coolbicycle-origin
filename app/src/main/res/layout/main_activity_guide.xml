<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/login_bg_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_login_bg" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_guide_login"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        android:alpha="0.8"
        android:background="@drawable/user_shape_register_bg"
        android:text="登录"
        android:textColor="@color/color_btn_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_guide_register"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_guide_register"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:alpha="0.8"
        android:background="@drawable/user_shape_login_bg"
        android:text="注册"
        android:textColor="@color/color_text_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_guide_login"
        app:layout_constraintTop_toTopOf="@+id/btn_guide_login" />


</androidx.constraintlayout.widget.ConstraintLayout>